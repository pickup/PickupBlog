@model Post
           
<div class="post" id="@this.Model.FileID">
    <div>
        <div class="publishDate">
            <div class="publishYear">2012</div>
            <div class="publishDay">12.12</div>
        </div>
        <h1>
            @this.Html.ActionLink(this.Model.Title, "Index", "Post", new { id = this.Model.FileID }, null)
        </h1>
    </div>
    <div class="postMeta">
        <span>作者：@this.Model.TimeText</span>
        <span>@this.Model.CategoriesText</span>
    </div>
    <div id="PostContent" class="postContent">
        @this.Html.Raw(this.Model.HighlightedContents)
    </div>
    <div>
        @this.Html.ActionLink("查看原文", "Index", "Post", new { id = this.Model.FileID }, null)  | 
        @this.Html.ActionLink(this.Model.GetCommentCount(), "Index", "Post", null, null, "comments", new { id = this.Model.FileID }, null)  |
        @this.Html.ActionLink("添加评论", "Index", "Post", null, null, "addcomment", new { id = this.Model.FileID }, null)
    </div>
</div>

