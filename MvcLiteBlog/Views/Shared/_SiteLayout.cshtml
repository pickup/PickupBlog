<!DOCTYPE html>

<html>
<head>
    <title>@this.ViewBag.Title</title>
    <link href="@this.Url.Content("~/Content/Blog.css")" rel="stylesheet" type="text/css" />
    <link href="@this.Url.Content("~/Content/le-frog/jquery-ui-1.8.16.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@this.Url.Content("~/Content/SimpleTree.css")" rel="stylesheet" type="text/css" />
    <script src='@this.Url.Content("~/Scripts/MicrosoftAjax.debug.js")' type="text/javascript"></script>
    <script src='@this.Url.Content("~/Scripts/MicrosoftMvcAjax.debug.js")' type="text/javascript"></script>
    <script src='@this.Url.Content("~/Scripts/jquery-1.6.2.min.js")' type="text/javascript"></script>
    <script src='@this.Url.Content("~/Scripts/jquery-ui-1.8.16.custom.min.js")' type="text/javascript"></script>
    <script src="@this.Url.Content("~/Scripts/Custom/plugins/simpletree.js")" type="text/javascript"></script>
    <script type="text/javascript">
        var appPath = '@this.Url.Content("~/")';
    </script>
    @this.RenderSection("ScriptSection", false)
</head>
<body>
    <div class="page">
        <div id="header">
            @this.Html.Action("Title", "Home")
        </div>
        <div id="middle">
            <div id="center">
                @this.RenderBody()
            </div>
            <div id="right">
                @this.Html.Action("MostPopularTile", "Home")
                @this.Html.Action("RecentCommentsTile", "Comment")
                @this.Html.Action("Widget", "Category")
                @this.Html.Action("Widget", "Archive")
                @this.Html.Action("Stat", "Home")
                @this.Html.Partial("AdControl")
            </div>
            <div style="clear: both;">&nbsp;</div>
        </div>
        <div id="footer">
            &copy; 2012 皮卡网志
        </div>
    </div>
    <script type="text/javascript">
        var _bdhmProtocol = (("https:" == document.location.protocol) ? " https://" : " http://");
        document.write(unescape("%3Cscript src='" + _bdhmProtocol + "hm.baidu.com/h.js%3Ff1c27a1f5e4ddd21285a8a21e0ba3f8e' type='text/javascript'%3E%3C/script%3E"));
    </script>
</body>
</html>
