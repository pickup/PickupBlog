                <a href="http://www.google.com/chrome/?hl=zh-CN">Chrome</a> / <a href="http://www.mozillaonline.com/">Firefox</a> / <a href="http://www.apple.com.cn/safari/">Safari</a> / <a href="http://www.operachina.com/">Opera</a>
            </p>
        </div>
        <![endif]-->
        <div id="header">
            @this.Html.Action("Title", "Blog")
        </div>
        <div id="middle">
            <div id="center">
                @this.RenderBody()
            </div>
            <div id="right">
                @this.Html.Action("MostPopularTile", "Blog")
                @this.Html.Action("RecentCommentsTile", "Comment")
                @this.Html.Action("Widget", "Category")
                @this.Html.Action("Widget", "Archive")
                @this.Html.Action("Stat", "Blog")
                @this.Html.Partial("AdControl")
            </div>
            <div style="clear: both;">&nbsp;</div>
        </div>
        <div id="footer">
            &copy; 2012 皮卡网志
        </div>
    </div>
    <script type="text/javascript">
        function setShare(title, url, summary) {
            jiathis_config.title = title;
            jiathis_config.url = url;
            jiathis_config.summary = summary;
        }
        var jiathis_config = {}
    </script>
    <script type="text/javascript" src="http://v3.jiathis.com/code/jia.js?uid=1350656775435570" charset="utf-8"></script>
    <script type="text/javascript">
        var _bdhmProtocol = (("https:" == document.location.protocol) ? " https://" : " http://");
        document.write('<div style="display:none">' + unescape("%3Cscript src='" + _bdhmProtocol + "hm.baidu.com/h.js%3Ff1c27a1f5e4ddd21285a8a21e0ba3f8e' type='text/javascript'%3E%3C/script%3E") + '</div>');
        //ie6 warning
        jQuery(function ($) {
            if (jQuery.browser.msie && (jQuery.browser.version == "6.0") && !jQuery.support.style) {
                jQuery('#ie6-warning').css({ 'top': jQuery(this).scrollTop() + 'px' });
            }
        });
    </script>
</body>
</html>
