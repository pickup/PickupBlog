<!DOCTYPE html>

<html>
    <head>
        <title>@this.ViewBag.Title</title>
        <meta name="keywords" content="皮卡,皮卡工作室,Pickup,Pickup Studio,RememberIt,Kinver,zdybit,LPraYer,宽厚,逢冬飘雪" />
        <meta name="description" content="皮卡工作室关注和收集泛互联网行业的前沿动态，并将新鲜的想法转化为产品。" />
        <!--基本兼容ie8以上浏览器，使用可选的最高的ie渲染模式-->
        <meta http-equiv="X-UA-Compatible" content="IE=Edge" >
        <link rel="icon" type="image/x-icon" href="~/Content/le-frog/images/favicon.ico" />
        <link rel="shortcut icon" type="image/x-icon" href="~/Content/le-frog/images/favicon.ico" />
        <link href="@this.Url.Content("~/Content/le-frog/jquery-ui-1.8.16.custom.css")" rel="stylesheet" type="text/css" />
        <link href="@this.Url.Content("~/Content/Admin.css")" rel="stylesheet" type="text/css" />
        <link href="@this.Url.Content("~/Content/bootstrap.css") rel="stylesheet" type="text/css" />
        <script src='@this.Url.Content("~/Scripts/MicrosoftAjax.debug.js")' type="text/javascript"></script>
        <script src='@this.Url.Content("~/Scripts/MicrosoftMvcAjax.debug.js")' type="text/javascript"></script>
        <script src='@this.Url.Content("~/Scripts/MicrosoftMvcValidation.debug.js")' type="text/javascript"></script>
        <script src='@this.Url.Content("~/Scripts/jquery-1.6.2.min.js")' type="text/javascript"></script>
        <script src='@this.Url.Content("~/Scripts/jquery-ui-1.8.16.custom.min.js")' type="text/javascript"></script>
        <script type="text/javascript">
            var appPath = '@this.Url.Content("~/")';

            $(document).ready(
                function() {
                    $('input[type=submit], input[type=button], a', '.button, .leftButton').button();
                });

        </script>
        @this.RenderSection("ScriptSection", false)
    </head>
    <body>
        <div class="page">
            <div id="header">
                @this.Html.Action("AdminTitle", "Blog")
            </div>
            <div id="middle">
                <div id="left">
                    @{ this.Html.RenderAction("AdminMenu", "Blog"); }
                </div>
                <div id="center">
                    @{ this.Html.EnableClientValidation(); }

                    @this.RenderBody()
                </div>
                <div style="clear: both;">&nbsp;</div>
            </div>
       
            <div id="footer">
                &copy; 2012 皮卡网志
            </div>
        </div>
    </body>
</html>
